#%RAML 1.0 Library
uses:
  annotations: ../../../../../../../glapi-global-apis-commons-commons/annotations/annotationsLibrary.raml

types:
  quota:
    type: object
    description: "Quota of the credit acquired with the bank."
    properties:
      amount:
        type: number
        description: |
          Value of the mortgage payment.
        required: true

      currency:
        type: string
        description: |
          String based on ISO-4217 for specifying the currency related to the amount.
        required: true

