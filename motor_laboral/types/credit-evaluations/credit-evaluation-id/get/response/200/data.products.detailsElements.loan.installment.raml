#%RAML 1.0 Library
uses:
  annotations: ../../../../../../../glapi-global-apis-commons-commons/annotations/annotationsLibrary.raml

types:
  installment:
    type: object
    description: "Loan installment."
    properties:
      amount:
        type: number
        description: |
          Installment monetary amount.
        required: true

      currency:
        type: string
        description: |
          String based on ISO-4217 for specifying the currency of the installment amount.
        required: true

