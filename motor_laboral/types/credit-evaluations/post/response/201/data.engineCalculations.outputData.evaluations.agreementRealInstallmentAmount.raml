#%RAML 1.0 Library
uses:
  annotations: ../../../../../../glapi-global-apis-commons-commons/annotations/annotationsLibrary.raml

types:
  agreementRealInstallmentAmount:
    type: object
    description: "Real installment amount that a client pays for an agreement made between the bank and a company. This fee has a discount agreed in the agreement."
    properties:
      currency:
        type: string
        description: |
          String based on ISO-4217 for specifying the currency related to the amount.
        required: true

      amount:
        type: number
        description: |
          Monetary amount.
        required: true

